<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Relativelogin"
    android:background="@drawable/bglogin"
    tools:context="ikon.ikon.Activites.Login">
    <ProgressBar
        android:id="@+id/progressBarlogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:background="@drawable/logo"

        />
    <EditText
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:hint="@string/Email"
        android:textColor="#c9c9c9"
        android:textColorHint="#c9c9c9"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:id="@+id/Log_Email"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/iconemaillogo"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_180sdp"
        />
    <EditText
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:hint="@string/Password"
        android:textColor="#c9c9c9"
        android:textColorHint="#c9c9c9"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:id="@+id/Log_Password"
        android:drawableRight="@drawable/iconlogopassword"
        android:drawablePadding="@dimen/_10sdp"

        android:gravity="end"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Log_Email"
        android:layout_marginTop="@dimen/_15sdp"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/backgroundbtns"
        android:text="@string/signin"
        android:textColor="#fff"
        android:textSize="@dimen/_16sdp"
        android:layout_below="@+id/Log_Password"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/signin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resetpass"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/Resetpass"
        android:layout_below="@+id/signin"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#B4B2B2"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin"
        android:id="@+id/Relat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_40sdp">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/facebook"
            android:id="@+id/loginfac"
            android:layout_centerInParent="true"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="@dimen/_10sdp"-->
            <!--android:text="@string/Or"-->
            <!--android:textSize="@dimen/_20sdp"-->
            <!--/>-->
        <!--<ImageView-->
            <!--android:layout_width="@dimen/_40sdp"-->
            <!--android:layout_height="@dimen/_40sdp"-->
            <!--android:src="@drawable/google"-->
            <!--android:id="@+id/google"-->
            <!--/>-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/Relat"
        android:layout_centerHorizontal="true"
        android:id="@+id/relaaa"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Forget_password"
            android:textSize="@dimen/_17sdp"
            android:id="@+id/Register"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest"
            android:textSize="@dimen/_18sdp"
            android:id="@+id/guest"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />

    </RelativeLayout>

</RelativeLayout>
