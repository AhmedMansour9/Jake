<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_155sdp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroundsetting"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/relaone"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_height="@dimen/_120sdp">
            <ProgressBar
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:id="@+id/progrossimage"
                android:visibility="invisible"
                />

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/Image_Phone"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relaone"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/backgroundsettingthree"
            android:layout_height="@dimen/_60sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/T_Name"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="#6f7f8c"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_15sdp"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/T_Price"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_below="@+id/T_Name"
                android:textColor="#6f7f8c"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textAllCaps="false"
                android:text="@string/adde"
                android:layout_below="@+id/T_Name"
                android:background="@drawable/backgroundaddcart"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:id="@+id/Add_ToCart"
                />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
