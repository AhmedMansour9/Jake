<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/RelativeOrder"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            android:background="@color/transparent"
            app:popupTheme="@style/PopupOverlay">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarnavigation"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#365f93">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/T_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/ordr"
                        />

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:layout_below="@+id/bar"
        >
        <fragment
            android:id="@+id/maps"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:background="#00000000"
            android:layout_height="0dp"/>


        <EditText
            android:layout_width="@dimen/_270sdp"
            android:background="@drawable/backgroundprofile"
            android:id="@+id/T_Name"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/maps"
            android:paddingRight="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="#818f9b"
            android:textColorHint="#818f9b"
            android:hint="@string/name"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp" />

        <EditText
            android:layout_width="@dimen/_270sdp"
            android:background="@drawable/backgroundprofile"
            android:id="@+id/T_Phone"
            android:layout_below="@+id/T_Name"
            android:gravity="center_vertical"
            android:hint="@string/mobile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#818f9b"
            android:textColorHint="#818f9b"
            android:textStyle="bold"
            android:inputType="number"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp" />


        <EditText
            android:layout_width="@dimen/_270sdp"
            android:background="@drawable/backgroundprofile"
            android:id="@+id/T_Address"
            android:layout_below="@+id/T_Phone"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textColor="#818f9b"
            android:textStyle="bold"
            android:textColorHint="#818f9b"
            android:paddingRight="@dimen/_10sdp"
            android:hint="@string/address"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp" />
        <EditText
            android:layout_width="@dimen/_270sdp"
            android:background="@drawable/backgroundprofile"
            android:id="@+id/T_City"
            android:layout_below="@+id/T_Address"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textColor="#818f9b"
            android:textStyle="bold"
            android:textColorHint="#818f9b"
            android:paddingRight="@dimen/_10sdp"
            android:hint="@string/city"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp" />



        <EditText
            android:layout_width="@dimen/_270sdp"
            android:background="@drawable/backgroundprofile"
            android:id="@+id/T_Email"
            android:layout_below="@+id/T_City"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:textColor="#818f9b"
            android:textStyle="bold"
            android:textColorHint="#818f9b"
            android:paddingRight="@dimen/_10sdp"
            android:hint="@string/Email"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp" />

        <EditText
            android:layout_width="@dimen/_270sdp"
            android:background="@drawable/backgroundprofile"
            android:id="@+id/T_Notes"
            android:layout_below="@+id/T_Email"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:textColor="#818f9b"
            android:textColorHint="#818f9b"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:gravity="start"
            android:hint="@string/Note"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_70sdp" />


        <RelativeLayout
            android:layout_width="@dimen/_270sdp"
            android:layout_below="@+id/T_Notes"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/backgroundsetting"
            android:id="@+id/relatwo"
            android:layout_height="@dimen/_30sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:layout_centerVertical="true"
                android:textColor="#818f9b"
                android:layout_marginRight="@dimen/_20sdp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#818f9b"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:id="@+id/T_Price"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_270sdp"
            android:layout_below="@+id/relatwo"
            android:background="@drawable/backgroundsettingthree"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_height="@dimen/_80sdp">


            <Button
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/backgroundaddcart"
                android:layout_marginTop="@dimen/_140sdp"
                android:text="@string/ordr"
                android:id="@+id/RequestOrder"
                android:textAllCaps="false" />





        </RelativeLayout>


    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBarorder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
