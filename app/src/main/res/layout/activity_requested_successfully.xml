<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0783e7"
        app:popupTheme="@style/PopupOverlay"
        android:id="@+id/toolbarnavigation"
        tools:context="ikon.ikon.Activites.Navigation">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ikon"
                android:layout_marginLeft="@dimen/_80sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextDone"
                android:layout_alignParentRight="true"
                android:text="Done"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textStyle="bold"
                />


        </RelativeLayout>





    </android.support.v7.widget.Toolbar>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="@dimen/_30sdp"
         android:layout_below="@+id/toolbarnavigation"
         android:textColor="#9b9b9b"
         android:textSize="@dimen/_20sdp"
         android:textStyle="bold"
         android:text="@string/requestedsuccfuly"
         android:id="@+id/ord"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/ord"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:text="@string/orderid"
            android:id="@+id/orderid"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/ord"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@+id/orderid"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"
            android:id="@+id/T_Orderss"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_ordersuccesfull"
            android:scrollbars="vertical"
            android:layout_below="@+id/ord"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


<ImageView
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_50sdp"
    android:id="@+id/ikon"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/recycler_ordersuccesfull"
    android:src="@drawable/logotoolbar"
    />
    </RelativeLayout>
</ScrollView>
