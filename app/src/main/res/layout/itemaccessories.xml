<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/_150sdp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:padding="@dimen/_5sdp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="5dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:id="@+id/progrossimage"
            android:visibility="invisible"
            />

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/Image_Phone"
            android:layout_marginBottom="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/T_Name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/T_Discrption"
            android:layout_below="@+id/T_Name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/T_Model"
            android:layout_below="@+id/T_Discrption"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/T_Price"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@+id/T_Model"
            android:textColor="#000"
            />
        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btncart"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@+id/T_Model"
            android:text="@string/cart"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>