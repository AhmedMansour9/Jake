<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="@dimen/_10sdp"
    app:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:id="@+id/progrossimage"
            android:visibility="invisible"
            />

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/Image_Phone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/T_Name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/T_Discrption"
            android:layout_below="@+id/T_Name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/T_Model"
            android:layout_below="@+id/T_Discrption"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_toRightOf="@+id/Image_Phone"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/T_Price"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@+id/T_Model"
            android:textColor="#000"
            />



        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_below="@+id/T_Price"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/btncard"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/cart"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/minus"
            android:src="@drawable/minus"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@+id/T_Price"
            android:layout_toLeftOf="@+id/contuner"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/plus"
            android:src="@drawable/plus"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_toLeftOf="@+id/btncard"
            android:layout_below="@+id/T_Price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/T_Price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:text="1"
            android:id="@+id/contuner" />


</RelativeLayout>

</android.support.v7.widget.CardView>